---
import { Picture } from "astro:assets";
import myImage from "../images/myPhoto.jpg"; // Image is 1600x900

import LatestEntry from "../components/LatestEntry.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import VisualCoreComplex from "../components/VisualCoreComplex";
import HeroElement from "../components/HeroElement";
---

<BaseLayout title="Home" description="Welcome to my blog!">
  <div class="flex flex-col gap-4">
    <section
      class="md:col-span-3 card flex items-center justify-around animate-fade-in"
    >
      <Picture
        src={myImage}
        alt="A description of my image."
        class="rounded-full w-16 h-16 md:w-48 md:h-48 object-cover"
      />

      <article class="text-center">
        <h1 class="text-3xl font-bold">
          Hello, I'm Alex and Welcome to My Blog
        </h1>
        <p class="text-lg">
          Everything is under construction, pls come back later when it's done
        </p>
      </article>
    </section>

    <section
      class="flex flex-col items-center justify-center animate-slide-up gap-4"
    >
      <h3 class="text-md font-semibold text-center">Latest Post</h3>
      <LatestEntry collection="posts" />
      <a href="/posts" class="text-sm underline mt-2">View all posts</a>
    </section>

    <section
      class="flex flex-col items-center justify-center animate-slide-up gap-4"
    >
      <h3 class="text-md font-semibold text-center">Latest Project</h3>
      <LatestEntry collection="projects" />
      <a href="/projects" class="text-sm underline mt-2">View all projects</a>
    </section>
  </div>
</BaseLayout>
