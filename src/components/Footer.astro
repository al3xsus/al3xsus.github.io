---
import SocialLink from "./SocialLink.astro";

const {
  author = "",
  year = new Date().getFullYear(),
  lastUpdated = new Date().toISOString().split("T")[0],
  social = [],
} = Astro.props;
---

<footer
  role="contentinfo"
  aria-label="Site Footer"
  class="w-full px-6 py-4 bg-background text-foreground border-t border-grid"
>
  <div
    class="max-w-7xl mx-auto flex items-center text-center justify-between gap-4"
  >
    <!-- Left: Credits -->
    <div class="text-sm space-y-1">
      <p>&copy; {year}</p>
      <p>
        Made by <span class="text-primary font-medium">{author}</span>
      </p>
    </div>

    <!-- Center: Social Links -->
    <div class="flex justify-center md:justify-center gap-6">
      {social.map((link) => <SocialLink url={link.url} icon={link.icon} />)}
    </div>

    <!-- Right: Last Updated -->
    <div class="text-sm md:text-right text-center">
      <p class="text-foreground/60">
        Last updated: {
          new Date(lastUpdated).toLocaleDateString("en-US", {
            year: "numeric",
            month: "short",
            day: "numeric",
          })
        }
      </p>
    </div>
  </div>
</footer>
